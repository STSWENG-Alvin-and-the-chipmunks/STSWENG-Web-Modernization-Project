<!-- Service Page -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<!-- Service Banner -->
<div class="service-banner">
  <img loading="lazy" src="assets/servicesbg.png" class="banner-image" alt="Service banner background" />
  <div class="service-info">
    {{#each services}}
      {{#if @first}}
        <div class="service-type">{{this.serviceType}}</div>
      {{/if}}
    {{/each}}
  </div>
</div>

<!-- Service Details -->
{{#each services}}
<div class="service-details">
  <div class="details-container">
    <div class="details-content">
      <div class="image-column">
        <!-- Service Carousel -->
        <div id="serviceCarousel-{{@index}}" class="carousel slide" data-ride="carousel">
          <!-- Indicators -->
          <ol class="carousel-indicators">
            <li data-target="#serviceCarousel-{{@index}}" data-slide-to="0" class="active"></li>
            <li data-target="#serviceCarousel-{{@index}}" data-slide-to="1"></li>
            <li data-target="#serviceCarousel-{{@index}}" data-slide-to="2"></li>
          </ol>
          <!-- Wrapper for slides -->
          <div class="carousel-inner">
            <div class="item active">
              <img loading="lazy" src="{{this.serviceImages.[0]}}" alt="Service illustration" />
            </div>
            <div class="item">
              <img loading="lazy" src="{{this.serviceImages.[1]}}" alt="Service illustration" />
            </div>
            <div class="item">
              <img loading="lazy" src="{{this.serviceImages.[2]}}" alt="Service illustration" />
            </div>
          </div>
          <!-- Left and right controls -->
          <a class="left carousel-control" href="#serviceCarousel-{{@index}}" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#serviceCarousel-{{@index}}" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
      <div class="text-column">
        <div class="text-content">
          <div class="content-title">{{this.serviceName}}</div>
          <div class="content-description">
            {{this.serviceDescription}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="service-info-section">
  <div class="service-info-content">
    <div class="pricing-box">
      <div class="pricing-row">
        <div class="pricing-title">Pricing</div>
        <div class="vertical-line"></div>
        <div class="pricing-details">
          {{#if this.pricing.normal}}Normal: &nbsp; {{this.pricing.normal}} <br>{{/if}}
          {{#if this.pricing.short}}Short: &nbsp; {{this.pricing.short}} <br>{{/if}}
          {{#if this.pricing.medium}}Medium: &nbsp; {{this.pricing.medium}} <br>{{/if}}
          {{#if this.pricing.long}}Long: &nbsp;&nbsp; {{this.pricing.long}} <br>{{/if}}
          {{#if this.pricing.extraLong}}Extra Long: &nbsp;&nbsp; {{this.pricing.extraLong}} <br>{{/if}}
          {{#if this.pricing.matrix}}Matrix: &nbsp; {{this.pricing.matrix}} <br>{{/if}}
          {{#if this.pricing.elgon}}Elgon: &nbsp; {{this.pricing.elgon}} <br>{{/if}}
          {{#if this.pricing.ordeve}}Ordeve: &nbsp; {{this.pricing.ordeve}} <br>{{/if}}
        </div>
      </div>
    </div>
    <div class="cutoff-time">
      <div class="cutoff-row">
        <div class="cutoff-title">Cut-Off Time</div>
        <div class="vertical-line"></div>
        <div class="cutoff-time-value">{{this.cutOffTime}}</div>
      </div>
    </div>
    <div class="availability">
      <div class="availability-row">
        <div class="availability-title">Availability</div>
        <div class="vertical-line"></div>
        <div class="availability-details">&nbsp;&nbsp;{{this.branches}}</div>
      </div>
    </div>
  </div>
</div>

{{/each}}
</div>

<!-- End of Services Page -->
